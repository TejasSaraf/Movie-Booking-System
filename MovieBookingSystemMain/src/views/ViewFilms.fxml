	<children>
		<ScrollPane fx:id="scrollPane" layoutX="3.0" layoutY="46.0" prefHeight="424.0" prefWidth="566.0">
			<!-- ScrollPane will contain the TilePane -->
			<content>
				<TilePane fx:id="tilePane" hgap="10" prefColumns="5" vgap="10" /> <!-- 3 columns in grid -->
			</content>
		</ScrollPane>
		<Label layoutX="14.0" layoutY="11.0" text="Movie Flix">
			<font>
				<Font name="Comic Sans MS Bold" size="22.0" />
			</font>
		</Label>
		<Button fx:id="btnLogout" layoutX="504.0" layoutY="15.0" mnemonicParsing="false" onAction="#logoutButtonOnAction" text="Logout" />
	</children>
</AnchorPane>
