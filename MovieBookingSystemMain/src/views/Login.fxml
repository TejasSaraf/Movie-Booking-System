<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="300.0" prefWidth="600.0"
	xmlns="http://javafx.com/javafx/23.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="controllers.LoginController">
	<children>
		<Button fx:id="loginButton" layoutX="431.0" layoutY="227.0"
			mnemonicParsing="false" onAction="#loginButtonOnAction"
			style="-fx-background-color: #b93939;" text="Login" textFill="WHITE">
			<font>
				<Font name="System Bold" size="12.0" />
			</font>
		</Button>
		<TextField fx:id="txtUserName" layoutX="326.0"
			layoutY="113.0" prefHeight="25.0" prefWidth="242.0"
			promptText="UserName" />
		<PasswordField fx:id="txtPassword" layoutX="326.0"
			layoutY="170.0" prefHeight="25.0" prefWidth="242.0"
			promptText="Password" />
		<Label fx:id="lblStatus" alignment="CENTER" layoutX="326.0"
			layoutY="14.0" prefHeight="17.0" prefWidth="258.0" text="Login">
			<font>
				<Font name="System Bold" size="14.0" />
			</font>
		</Label>
		<Label layoutX="325.0" layoutY="93.0" text="Username:">
			<font>
				<Font name="System Bold" size="14.0" />
			</font>
		</Label>
		<Label layoutX="327.0" layoutY="150.0" text="Password:">
			<font>
				<Font name="System Bold" size="14.0" />
			</font>
		</Label>
		<Label layoutX="326.0" layoutY="41.0" prefHeight="20.0"
			prefWidth="258.0" text="Sign into your exclusive Movie account to " />
		<Label layoutX="326.0" layoutY="61.0" text="continue!" />
		<Label layoutX="394.0" layoutY="264.0" text="Not a User?" />
		<Button fx:id="signUpButton" layoutX="452.0" layoutY="260.0"
			mnemonicParsing="false" onAction="#signUpButtonOnAction"
			style="-fx-background-color: transperent;" text="SignUp"
			textFill="#4f3cd0" underline="true" />
		<ImageView fitHeight="301.0" fitWidth="300.0"
			pickOnBounds="true" preserveRatio="true">
			<image>
				<Image url="@../images/Movie.png" />
			</image>
		</ImageView>
	</children>
</AnchorPane>
